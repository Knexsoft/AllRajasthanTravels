@model IEnumerable<AllRajasthan.DAL.EntityModel.Package>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

 
        <div class="row">
            <div class="table-responsive">
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <td align="center">PackageName</td>
                            <td align="center">Overview</td>
                            <td align="center">Exclusions</td>
                            <td align="center">CancelletionPolicy</td>
                            <td align="center">Notes</td>
                            <td align="center">Images</td>
                            <td align="center">IsActive</td>
                            <td align="center">IsDeleted</td>
                            <td align="center">TotalDays</td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>@Html.DisplayFor(modelitem => item.PackageName)</td>
                            <td>@Html.DisplayFor(modelitem => item.Overview)</td>
                            <td>@Html.DisplayFor(modelitem => item.Exclusions)</td>
                            @*<td>@Html.DisplayFor(modelitem => item.CancelletionPolicy)</td>*@
                            <td>@Html.DisplayFor(modelitem => item.Notes)</td>
                            <td>@Html.DisplayFor(modelitem => item.Images)</td>
                            <td>@Html.DisplayFor(modelitem => item.IsActive)</td>
                            <td>@Html.DisplayFor(modelitem => item.IsDeleted)</td>
                            <td>@Html.DisplayFor(modelitem => item.TotalDays)</td>
                        </tr>

                        }
                    </tbody>

                </table>
            </div>
        </div>
   

